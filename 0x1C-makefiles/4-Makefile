CC = gcc
SRC = main.c school.c
OBJ = $(subst .c,.o,$(SRC))
NAME = school
RM = rm
all : $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

re : $(SRC) m.h
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

.PHONY: clean oclean fclean
clean :
	$(RM) -f *~ $(NAME)
	$(RM) -f $(NAME)
oclean :
	$(RM)  -f $(OBJ)

fclean :
	$(RM) -f $(OBJ)
	$(RM) -f $(NAME)
	$(RM) -f *~ $(NAME)
