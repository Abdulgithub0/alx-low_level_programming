CC = gcc
SRC = main.c school.c
OBJ = $(subst .c,.o,$(SRC))
NAME = school
RM = *~ school *~ main
CFLAGS = -Wall -Werror -Wextra -pedantic
all : $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

re : $(SRC) m.h
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

.PHONY: clean oclean fclean
clean :
	rm -f $(RM)
	rm -f $(NAME)
oclean :
	rm  -f $(OBJ)

fclean :
	rm -f $(RM)
	rm -f $(OBJ)
	rm -f $(NAME)
